        android:textSize="20sp"
        android:textColor="#f45044"/>
    <TextView
        android:id="@+id/DL_placa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_below="@id/DL_marca"
